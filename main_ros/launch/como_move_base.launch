<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="odom" />
  <arg name="move_forward_only" default="false"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find comobot)/param/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find comobot)/param/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find comobot)/param/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find comobot)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find comobot)/param/move_base_params.yaml" command="load" />

    <param name="base_global_planner" value="navfn/NavfnROS" /> 
    <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
    <rosparam file="$(find comobot)/param/global_planner_params.yaml" command="load" />
    <rosparam file="$(find comobot)/param/teb_local_planner_params.yaml" command="load" />
    <param name="TebLocalPlannerROS/max_vel_x_backwards" value="0.0" if="$(arg move_forward_only)" />
    
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>
</launch>